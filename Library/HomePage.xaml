<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Library.HomePage"
		BackgroundColor = "White">

	
	<ContentPage.Content Padding ="0">
		<Grid RowSpacing = "5" >
		 	<Grid.RowDefinitions>
				<RowDefinition Height="0.5*"/>
		 		<RowDefinition Height="auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height= "*"/>
				<RowDefinition Height= "auto"/>
				<RowDefinition Height = "*"/>
			
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width = "0.1*"/>
				<ColumnDefinition Width = "*"/>
				<ColumnDefinition Width = "0.1*"/>
			</Grid.ColumnDefinitions>

			<Label
					x:Name="mainLabel1"
					FontSize = "30"
					Grid.Row = "1"
					Grid.Column = "1"
					HorizontalOptions = "Center"
					TextColor="Black"/>
			
			<Image VerticalOptions="Center" Grid.Row = "2" Grid.Column = "1">
                                    <Image.WidthRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <OnPlatform.iOS>300</OnPlatform.iOS>
                                            <OnPlatform.Android>300 </OnPlatform.Android>
                                            <OnPlatform.WinPhone>315</OnPlatform.WinPhone>
                                        </OnPlatform>
                                    </Image.WidthRequest>
                                    <Image.HeightRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <OnPlatform.iOS>124</OnPlatform.iOS>
                                            <OnPlatform.Android>124</OnPlatform.Android>
                                            <OnPlatform.WinPhone>135</OnPlatform.WinPhone>
                                        </OnPlatform>
                                    </Image.HeightRequest>
                                    <Image.Source>
                                        <UriImageSource Uri="http://www.epl.lib.in.us/wp-content/uploads/2015/04/epl_window-300x124.jpg" CacheValidity="14" CachingEnabled="true"/>
                                    </Image.Source>
                                </Image>
						
			<Label
					x:Name="MainLabel"
					FontSize = "25"
					Grid.Row = "3"
					Grid.Column = "1"
					HorizontalOptions = "Center"
					TextColor="Black"/>
			<ProgressBar x:Name= "MainProgressBar"
					Grid.Row = "4"
					Grid.Column = "1"
					Progress="0.2"
					WidthRequest = "300"
					VerticalOptions ="Center"
				HorizontalOptions ="Center"/>


		</Grid>
		
	</ContentPage.Content>
</ContentPage>